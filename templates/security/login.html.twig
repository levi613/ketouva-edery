{% extends 'base.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-6"> <!-- Ajuste la largeur pour ton formulaire -->
        <form method="post" class="p-4 border rounded bg-light">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déjà connecté avec {{ app.user.userIdentifier }},
                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal text-center">Me connecter</h1>

            <!-- Email Input -->
            <div class="form-group mb-3 text-start">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                       class="form-control" autocomplete="email" required autofocus>
            </div>

            <!-- Password Input -->
            <div class="form-group mb-3 text-start">
                <label for="inputPassword" class="form-label">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password" required>
            </div>

            <!-- Remember Me & Forgot Password -->
            <div class="form-group mb-3 text-start d-flex justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Se souvenir de moi
                    </label>
                </div>
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <!-- Submit Button -->
            <div class="text-center">
                <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
